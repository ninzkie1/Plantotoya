@model List<MoralesFiFthCRUD.ViewModels.ProductViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View Cart</title>
    <style>
        /* Styles for product cards */
        .product-card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 20px;
            width: 300px;
            display: inline-block;
            vertical-align: top;
            margin-right: 20px;
        }

        .product-img {
            width: 100%;
            border-radius: 5px;
        }

        .product-details {
            margin-top: 10px;
        }

        .product-name {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .product-category {
            font-style: italic;
            color: #666;
            margin-bottom: 5px;
        }

        .product-description {
            margin-bottom: 10px;
        }

        .product-price {
            font-weight: bold;
        }

        .btn-container {
            margin-top: 10px;
        }

        .btn-checkout {
            margin-top: 10px;
        }

        /* Total price styling */
        .total-price {
            font-size: 18px;
            font-weight: bold;
            color: green;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div>
        <!-- Total price -->
        <div class="total-price">
            Total Price: ₱@Model.Sum(p => p.Price).ToString("N2")
        </div>
        <h2>Your Cart</h2>
        @foreach (var product in Model)
        {
            <div class="product-card">
                @if (product.ProductImg != null && product.ProductImg.Length > 0)
                {
                    <img src="data:image;base64,@(Convert.ToBase64String(product.ProductImg))" class="card-img-top" alt="Product Image">
                }
                else
                {
                    <p>No image available</p>
                }
                <div class="product-details">
                    <div class="product-name">@product.ProductName</div>
                    <div class="product-category">@product.Category</div>
                    <div class="product-description">@product.Description</div>
                    <p class="card-text">₱@product.Price.ToString("N2")</p>
                    <div class="product-quantity">Quantity: @product.Quantity</div>
                    <!-- Form for decrementing quantity -->
                    <form method="post" action="~/Home/DecrementQuantity">
                        <input type="hidden" name="productId" value="@product.ProductID" />
                        <button type="submit" class="btn btn-Arrow">-</button>
                    </form>
                </div>
                <a href="~/Home/DeleteProduct/@product.ProductID" class="btn btn-danger">Delete</a>
            </div>
        }
        <div class="btn-container">
            <!-- Checkout button -->
            <a href="~/Home/Checkout" class="btn btn-success btn-checkout">Checkout</a>
        </div>
    </div>
</body>
</html>
